<div class="block">
<h2><%= @article.title %></h2>

<div><%= @article.body %></div>

<br>
<p><% if Current.user %><%= link_to "Edit article", edit_article_path(@article) %> | <% end %>
<% if Current.user %><%= link_to "Delete article", article_path(@article),
    method: :delete,
    data: { confirm: "Are you sure?" }
%> | <% end %> <%= link_to "All Articles", articles_path %>
</p>
</div>

<hr/>

<div class="block">
<% if @article.comments.length > 0 %>
    <h2>Comments</h2>
    <%= render @article.comments %>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
</div>